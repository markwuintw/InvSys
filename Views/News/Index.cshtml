@using Sys.Models
@model MvcPaging.IPagedList<Sys.Models.News>
@using MvcPaging

@{
    ViewBag.Title = "Index";

    IQueryable<News> news = ViewBag.news;
}

<div id="banner-area" class="banner-area" style="background-image:url(/images/banner-bg.jpg)">
    <!-- Subpage title start -->
    <div class="banner-text text-right">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <ul class="breadcrumb">
                        <li>首頁</li>
                        <li>訊息發布</li>
                        <li><a href="/News">訊息發布</a></li>
                    </ul>


                </div>
            </div>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                <div class="sidebar sidebar-right">

                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>訊息發布</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            <li><a href="/News">訊息發布</a></li>

                        </ul>
                    </div>

                    <!-- Categories end -->

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">

                <h2 class="page-title">訊息發布</h2>
                <hr class="botmargin-min">
                <!-- 內容開始 -->


                @foreach (var item in Model)
                {
                    <div class="post">
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12">
                                <div class="post-media post-image">
                                    <a href="/news/Details/@item.Id"><img alt="img" src="/upfiles/@item.Photo" class="img-responsive"></a>

                                </div>
                            </div>
                            <div class="col-md-9 col-sm-12 col-xs-12">
                                <div class="post-body">
                                    <div class="entry-header">
                                        <span class="post-meta-date"><i class="fa fa fa-clock-o"></i> @Convert.ToDateTime(item.publishDate).ToString("yyyy-MM-dd")</span>
                                        <h3 class="entry-title">
                                            <a href="/news/Details/@item.Id">@item.NewsItem</a>
                                        </h3>
                                        <p>
                                            <em>
                                                @item.Introduction
                                            </em>
                                        </p>

                                    </div>
                                    <!-- header end -->
                                    <div class="post-footer">
                                        <a href="/news/Details/@item.Id" class="btn btn-primary">more</a>
                                    </div>
                                </div>
                                <!-- post-body end -->
                            </div>
                        </div>
                    </div>
                }

                <div class="paging text-center">
                    <div class="pagination">
                        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
                        @*<span class="disabled">«</span><span class="current">1</span><a href="/News?page=2" title="">2</a><a href="/News?page=2" title="Next page">»</a>*@
                    </div>
                </div>

                <!-- Content row 1 end -->
                <!-- 內容結束 -->

                <div class="tags-area clearfix">

                    <div class="share-items pull-right" style="display: none">
                        <ul class="post-social-icons unstyled">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div><!-- Content Col end -->


        </div><!-- Main row end -->

    </div><!-- Conatiner end -->
</section><!-- Main container end -->
