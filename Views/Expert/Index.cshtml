@using Sys.Models
@model Sys.Models.Expert

@{
    ViewBag.Title = "Index";

    IQueryable<Expert> Experts = ViewBag.Experts;
}

<div id="banner-area" class="banner-area" style="background-image:url(/images/banner-bg.jpg)">
    <!-- Subpage title start -->
    <div class="banner-text text-right">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <ul class="breadcrumb">
                        <li>首頁</li>
                        <li>關於我們</li>
                        <li><a href="#">協會介紹</a></li>
                    </ul>


                </div>
            </div>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                <div class="sidebar sidebar-right">

                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>關於我們</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            <li><a href="/Article/About">關於我們</a></li>
                            <li><a href="/Article/Organization">組織架構</a></li>
                            <li><a href="/Article/history">沿革</a></li>
                            <li><a href="/Article/Member">配證會員</a></li>
                            <li class="active"><a href="/Expert">專家介紹</a></li>
                        </ul>
                    </div>

                    <!-- Categories end -->

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">

                <h2 class="page-title">專家介紹</h2>
                <hr class="botmargin-min">
                <!-- 內容開始 -->



                <div class="row">
                    
                    @foreach (var item in Experts)
                    {
                            <div class="ts-service-wrapper">
                                <div class="ts-service-image-wrapper">
                                    <span class="ts-service-image">
                                        <a href="/Expert/Details/@item.Id" title="@item.Name"><img class="img-responsive" src="/upfiles/images/@item.Photo" alt="@item.Name"></a>
                                    </span>
                                </div>
                                <div class="ts-service-info">
                                    <h3><a href="/Expert/Details/@item.Id">@item.Name</a></h3>
                                    <p>@item.Job</p>
                                    <div class="col-md-4">
                                    </div>
                                </div>
                        </div><!-- Col 1 end -->
                    }

                    



                </div><!-- Content row 1 end -->
                <!-- Content row 1 end -->
                <!-- 內容結束 -->

                <div class="tags-area clearfix">

                    <div class="share-items pull-right" style="display: none">
                        <ul class="post-social-icons unstyled">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div><!-- Content Col end -->


        </div><!-- Main row end -->

    </div><!-- Conatiner end -->
</section><!-- Main container end -->